<div ng-controller="productCategoryGridController">
    <table class="table table-stripped table-hover">
        <thead>
            <td> Name </td>
            <td> Description </td>
            <td> Action </td>
        </thead>
        <tbody>
            <tr ng-repeat="category in productCategories">
                <td>
                    {{category.Name}}
                </td>
                <td>
                    {{category.Description}}
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
                            Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li> <a href="/Categories/Add/{{category.Id}}">Edit <span class="glyphicon glyphicon-pencil" aria-hidden="true" style="left:10px;"></span></a> </li>
                            <li> <a href="#">Delete <span class="glyphicon glyphicon-trash" aria-hidden="true" style="left:10px;"></span></a> </li>
                        </ul>
                        
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>