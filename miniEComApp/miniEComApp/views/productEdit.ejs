<% include layout %>
<script src="../../javascripts/product/controller/productManagementController.js"></script>
<div class="panel panel-primary" ng-controller="productController">
    <div class="panel-heading">
        <h3 class="panel-title">
            Add / Edit Products
        </h3>
    </div>
    <div class="panel-body">
        <div class="container">
            <form class="form-group form-group-sm col-sm-6" id="productForm">
                <div class="row">
                    <div class="input-group col">
                        <span class="input-group-addon"> <strong> Name </strong></span>
                        <input type="text" class="form-control" placeholder="Product Name" ng-model="new.product.name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="input-group col">
                        <span class="input-group-addon"> <strong> Description </strong></span>
                        <textarea name="" id="" cols="30" rows="10" class="form-control" placeholder="Product Description" ng-model="new.product.description"></textarea>
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    <div class="input-group-md">
                        <div class="form-buttons">
                            <button type="button" class="btn btn-primary" ng-click="addProduct()">Save</button>
                            <button type="button" class="btn btn-primary">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>